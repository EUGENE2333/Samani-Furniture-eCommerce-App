<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/g_card_background"
    app:elevation="0dp"
   android:paddingEnd="10dp"
    android:layout_margin="4dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="15dp">


        <ImageView
            android:id="@+id/img_product"
            android:layout_width="150dp"
            android:layout_height="141dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitCenter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.048"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:paddingEnd="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/myriad_font"
            android:text="Chair"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/img_product"
            app:layout_constraintTop_toTopOf="@id/img_product" />

        <TextView
            android:id="@+id/tv_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/myriad_font"
            android:text="$1600"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="17sp"
          app:layout_constraintStart_toStartOf="@id/tv_name"
            app:layout_constraintTop_toBottomOf="@id/tv_name" />

        <TextView
            android:id="@+id/tv_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myriad_font"
            android:text="25% off"
            android:textColor="@color/g_red"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:padding="5dp"
            app:layout_constraintStart_toStartOf="@id/tv_new_price"
            app:layout_constraintTop_toBottomOf="@id/tv_new_price"
             />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:text="Remove"
            android:textColor="@color/white"
            app:icon= "@drawable/ic_delete"
            app:iconGravity="textStart"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_offer"
            app:layout_constraintStart_toStartOf="@id/tv_new_price"




            />

        <Button
            android:id="@+id/AddToCartButton"
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:text="View"
            android:textColor="@color/black"
            android:backgroundTint="@color/g_white"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/img_product"
            app:layout_constraintStart_toStartOf="@id/img_product"
            app:layout_constraintEnd_toEndOf="@id/img_product"


            />





    </androidx.constraintlayout.widget.ConstraintLayout>